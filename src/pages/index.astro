<Layout title="TextoVoz">
	<main class="container m-auto grid min-h-screen grid-rows-[auto,1fr,auto] px-4">
		<header class="text-xl font-bold leading-[4rem]">TextoVoz</header>
		<section class="flex flex-col gap-8">
			<article class="flex gap-4 flex-wrap">
				<div class="w-full max-w-[250px] space-y-2">
					<label>Voz</label>
					<select name="" id="" class="w-full p-2 border rounded-lg cursor-pointer outline-none">
						<option value="">voice 1</option>
						<option value="">voice 2</option>
					</select>
				</div>
				<div class="w-full max-w-[150px] space-y-2">
					<label>Tono</label>
					<input type="range" name="" id="" class="w-full cursor-pointer">
				</div>
				<div class="w-full max-w-[150px] space-y-2">
					<label>Velocidad</label>
					<input type="range" name="" id="" class="w-full cursor-pointer">
				</div>
				<div class="flex gap-2 items-end">
					<button type="button" class="border rounded-lg p-2 text-green-600">
						<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="currentColor"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M6 4v16a1 1 0 0 0 1.524 .852l13 -8a1 1 0 0 0 0 -1.704l-13 -8a1 1 0 0 0 -1.524 .852z" /></svg>
					</button>
					<button type="button" class="border rounded-lg p-2 text-gray-600">
						<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="currentColor"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M17 4h-10a3 3 0 0 0 -3 3v10a3 3 0 0 0 3 3h10a3 3 0 0 0 3 -3v-10a3 3 0 0 0 -3 -3z" /></svg>
					</button>
					<button type="button" class="border rounded-lg p-2 text-red-600">
						<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="currentColor"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M8 5.072a8 8 0 1 1 -3.995 7.213l-.005 -.285l.005 -.285a8 8 0 0 1 3.995 -6.643z" /></svg>
					</button>
					<div class="flex">
						<button type="button" class="p-2">
							<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15 8a5 5 0 0 1 0 8" /><path d="M17.7 5a9 9 0 0 1 0 14" /><path d="M6 15h-2a1 1 0 0 1 -1 -1v-4a1 1 0 0 1 1 -1h2l3.5 -4.5a.8 .8 0 0 1 1.5 .5v14a.8 .8 0 0 1 -1.5 .5l-3.5 -4.5" /></svg>
						</button>
						<input type="range" class="w-full max-w-[150px] cursor-pointer">
					</div>
				</div>
			</article>
			<textarea name="" id="" class="border p-2 h-full outline-none rounded-lg"/>
		</section>
		<footer class="text-center leading-[4rem] opacity-70">
